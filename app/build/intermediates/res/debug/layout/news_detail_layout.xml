<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buyDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LBL_BUY_DEAL"
        android:visibility="gone" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
   android:layout_margin="5dp"
    android:orientation="vertical" >
    <View
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:background="#c0c0c0"/>
    <TextView
        android:id="@+id/newsDetailNewsName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Title"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="5dp"
        
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
        android:layout_width="110dp"
        android:layout_marginRight="10dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:id="@+id/install"
        android:text="Install"
        android:onClick="installApp"
        android:background="#b5cd41"
        android:textColor="#ffff"
        />
<TextView
        android:id="@+id/newsDetailNewsReporter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reporter"
        android:textColor="@android:color/darker_gray"
        android:padding="5dp"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="228dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="0dp"
    android:background="@drawable/screen_bg"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager
        android:id="@+id/pagerDetail"
        android:background="#DCDCDC"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        />
    <ImageView
        android:id="@+id/newsDetailImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/phnoav" />
    
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hideAbleVideoArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
   android:layout_margin="5dp"
    android:orientation="vertical" >
      <TextView
             android:id="@+id/MSG_PLAY_VID"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingBottom="5dp"
             android:text="@string/MSG_PLAY_VIDEO"
             android:textColor="@android:color/holo_red_light"
             
             android:textAppearance="?android:attr/textAppearanceMedium" />

      <Button
          android:id="@+id/playVid"
          android:layout_width="80dp"
          android:layout_height="35dp"
          android:layout_marginLeft="10dp"
          android:onClick="playVideo"
          android:layout_marginBottom="5dp"
          android:background="#5d6cc0"
          android:textColor="#ffff"
          android:text="Play" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloading..."
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/downloadAmount" />

        <ProgressBar
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_marginBottom="10dp"
    android:id="@+id/progressBar"
    android:layout_gravity="left"
    />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
         android:background="@drawable/screen_bg"
         android:layout_margin="5dp"
        android:orientation="vertical" >

         <TextView
             android:id="@+id/newsDetailDesc"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="5dp"
             android:text="@string/LBL_DESCRIPTION"
             android:visibility="gone"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <ImageView
             android:id="@+id/addvertiseImage"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:scaleType="fitXY"
             android:visibility="gone"
             android:src="@drawable/imagenotavailable" />

     <View
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:background="#c0c0c0"/>

    <TextView
        android:id="@+id/newsDetailDetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/whatsNew"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="What's New"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tablebg"
        android:stretchColumns="2">
        <TableRow>
            <TextView
                android:text="Package Name"
                android:padding="3dip" />
            <TextView
                android:id="@+id/packageName"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView

                android:text="Updated"
                android:padding="3dip" />
            <TextView
                android:id="@+id/updated"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Version Code"
                android:padding="3dip" />
            <TextView
                android:id="@+id/versionCode"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView

                android:text="Size"
                android:padding="3dip" />
            <TextView
                android:id="@+id/size"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Installs"
                android:padding="3dip" />
            <TextView
                android:id="@+id/installs"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView

                android:text="Android Required"
                android:padding="3dip" />
            <TextView
                android:id="@+id/androidRequired"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Rating"
                android:padding="3dip" />
            <TextView
                android:id="@+id/rating"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView

                android:text="Permissions"
                android:padding="3dip" />
            <TextView
                android:id="@+id/permissions"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView

                android:text="Developer"
                android:padding="3dip" />
            <TextView
                android:id="@+id/developer"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>



</LinearLayout>
</ScrollView><!-- From: file:/F:/New%20folder/CoreAppsStoreNewsStyle/app/src/main/res/layout/news_detail_layout.xml -->