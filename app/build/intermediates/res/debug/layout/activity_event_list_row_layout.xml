<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:layout_weight=".60"
    android:padding="5dp"
    
    android:orientation="horizontal" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="1"
        
        android:columnCount="2"
        android:background="@drawable/screen_bg"
        android:rowCount="3" >

        <ImageView
            android:id="@+id/eventIconImage"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/imagenotavailable" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="0"
            android:lines="2"
            android:padding="5dp"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHighlight="#ff0000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/eventAttractionPoint"
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/eventStartDateTime"
            android:layout_column="1"
            android:layout_gravity="right|bottom"
            android:layout_row="0"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </GridLayout>

</GridLayout><!-- From: file:/F:/New%20folder/CoreAppsStoreNewsStyle/app/src/main/res/layout/activity_event_list_row_layout.xml -->