<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg5"
    android:orientation="vertical"
    tools:context="com.coreapps.store.core.RechargeActivity"

    >

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.52"
                android:background="@drawable/roundcorners"
                android:checked="true"
                android:gravity="center"
                android:onClick="self"
                android:text="Self  " />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.52"
                android:background="@drawable/roundcorners"
                android:gravity="center"
                android:onClick="other"
                android:text="Other" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/roundcorners"
            android:gravity="center"
            android:text="+91" />

        <EditText
            android:id="@+id/mobNoForRecharge"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/roundcorners"
            android:ems="10"
            android:gravity="center"
            android:hint=" Phone No."
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/operatorType"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:background="@drawable/roundcorners"
            android:entries="@array/serviceprovider"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/amountToCharge"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:background="@drawable/roundcorners"
            android:gravity="center"
            android:hint="Amount"
            android:inputType="number" />


    </LinearLayout>

    <Button
        android:id="@+id/viewPlans"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circlebutton"
        android:onClick="viewPlans"
        android:text="Plans"
        android:textColor="#ffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#5d6cc0"
        android:onClick="redeem"
        android:text="Redeem"
        android:textColor="#ffffff" />


</LinearLayout>
