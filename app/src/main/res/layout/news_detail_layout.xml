<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC"
        android:orientation="vertical">

        <Button
            android:id="@+id/buyDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LBL_BUY_DEAL"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/screen_bg"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/newsDetailNewsName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="New Title"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:textColor="@android:color/holo_blue_dark" />

            <Button
                android:id="@+id/install"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="#b5cd41"
                android:onClick="installApp"
                android:text="Install"
                android:textColor="#ffff" />

            <TextView
                android:id="@+id/newsDetailNewsReporter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Reporter"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/screen_bg"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/pagerDetail"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DCDCDC"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/newsDetailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/phnoav"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hideAbleVideoArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/screen_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MSG_PLAY_VID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/MSG_PLAY_VIDEO"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="@android:color/holo_red_light" />

            <Button
                android:id="@+id/playVid"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:background="#5d6cc0"
                android:onClick="playVideo"
                android:text="Play"
                android:textColor="#ffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Downloading..." />

            <TextView
                android:id="@+id/downloadAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/screen_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/newsDetailDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/LBL_DESCRIPTION"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/addvertiseImage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/imagenotavailable"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/newsDetailDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/whatsNew"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="What's New"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tablebg"
            android:padding="20dp"
            android:stretchColumns="2">

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Package Name" />

                <TextView
                    android:id="@+id/packageName"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Updated" />

                <TextView
                    android:id="@+id/updated"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Version Code" />

                <TextView
                    android:id="@+id/versionCode"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Size" />

                <TextView
                    android:id="@+id/size"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Installs" />

                <TextView
                    android:id="@+id/installs"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Android Required" />

                <TextView
                    android:id="@+id/androidRequired"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Rating" />

                <TextView
                    android:id="@+id/rating"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Permissions" />

                <TextView
                    android:id="@+id/permissions"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Developer" />

                <TextView
                    android:id="@+id/developer"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
        </TableLayout>


    </LinearLayout>
</ScrollView>